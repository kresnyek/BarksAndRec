<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textViewEventDate"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:background="@color/colorBackground"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="MON ##"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textViewEventTitleD"
            android:layout_width="200dp"
            android:layout_height="90dp"
            android:layout_alignTop="@+id/textViewEventDate"
            android:layout_toEndOf="@+id/textViewEventDate"
            android:background="@color/colorBackground"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="unloadedTitle"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <ImageView
            android:id="@+id/imageViewJoinEvent"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/textViewEventTitleD"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/textViewEventTitleD"
            android:layout_toEndOf="@+id/textViewEventTitleD"
            android:background="@color/colorPrimaryDark"
            app:srcCompat="@android:drawable/ic_menu_search"/>

    </RelativeLayout>
</LinearLayout>