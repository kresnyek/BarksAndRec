<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    tools:context="com.iu.ckresnye.barksandrec.HomeActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <include
            layout="@layout/content_home"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"/>

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay"/>

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/buttonFitbark"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="123dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:text="FitBark"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="61dp"/>

        <Button
            android:id="@+id/buttonPaypal"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/buttonFitbark"
            android:layout_marginEnd="63dp"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:text="Paypal"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/buttonMaps"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignEnd="@+id/buttonFitbark"
            android:layout_centerVertical="true"
            android:background="@color/colorPrimary"
            android:fontFamily="casual"
            android:text="Maps"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"/>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
