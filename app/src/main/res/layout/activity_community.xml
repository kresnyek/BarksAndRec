<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iu.ckresnye.barksandrec.CommunityActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary">

        <TextView
            android:id="@+id/textViewParkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="casual"
            android:gravity="center_horizontal"
            android:text="Unloaded Park Name"
            android:textColor="@android:color/background_light"
            android:textSize="24sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/buttonHome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/imageViewPark"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:backgroundTint="@color/colorTextOne"
            app:srcCompat="@android:drawable/ic_menu_more"/>

        <ImageView
            android:id="@+id/imageViewPark"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            app:srcCompat="@mipmap/ic_launcher"
            android:layout_below="@+id/textViewParkName"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/textViewHours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/imageViewPark"
            android:background="@color/colorPrimaryDark"
            android:fontFamily="casual"
            android:gravity="center"
            android:text="Unloaded Park Hours"
            android:textColor="@color/colorBackground"
            android:textSize="18sp"/>

        <Button
            android:id="@+id/buttonEvents"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewHours"
            android:layout_marginStart="19dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorBackground"
            android:fontFamily="casual"
            android:text="Park Events"
            android:textColor="@color/colorTextOne"
            android:textSize="18sp"
            android:textStyle="bold"/>

        <Button
            android:id="@+id/buttonGoals"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_alignTop="@+id/buttonEvents"
            android:layout_marginStart="16dp"
            android:layout_toEndOf="@+id/buttonEvents"
            android:background="@color/colorBackground"
            android:fontFamily="casual"
            android:text="Park Goal"
            android:textColor="@color/colorTextOne"
            android:textSize="18sp"
            android:textStyle="bold"/>

    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
